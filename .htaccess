<IfModule mod_rewrite.c>
    RewriteEngine On

    # Si la petición es para un archivo o directorio que existe, no redirigir
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Redirigir todo lo demás al directorio public
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>

